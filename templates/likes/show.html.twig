{% extends 'base.html.twig' %}

{% block title %}Likes{% endblock %}

{% block body %}
    <h1>Likes</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>LikeId</th>
                <td>{{ like.likeId }}</td>
            </tr>
            <tr>
                <th>PostId</th>
                <td>{{ like.postId }}</td>
            </tr>
            <tr>
                <th>UserId</th>
                <td>{{ like.userId }}</td>
            </tr>
            <tr>
                <th>ReactionType</th>
                <td>{{ like.reactionType }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ like.createdAt ? like.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_likes_index') }}">back to list</a>

    <a href="{{ path('app_likes_edit', {'likeId': like.likeId}) }}">edit</a>

    {{ include('likes/_delete_form.html.twig') }}
{% endblock %}

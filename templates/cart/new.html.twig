{# templates/customer_order/new.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Create New Customer Order{% endblock %}

{% block body %}
    <h1>Create New Customer Order</h1>

    {{ form_start(form) }}
        {{ form_row(form.userId) }}
        {{ form_label(form.products) }}
        <ul>
            {% for product in availableProducts %}
                <li>
                    <label>
                        {{ form_checkbox(form.products, product.id) }}
                        {{ product.name }} - {{ product.price }}$ - Available: {{ product.stock }}
                    </label>
                </li>
            {% endfor %}
        </ul>
        <button type="submit">Save</button>
    {{ form_end(form) }}
{% endblock %}

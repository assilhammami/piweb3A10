    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cart.id }}</td>
            </tr>
            <tr>
                <th>ProductId</th>
                <td>{{ cart.productId }}</td>
            </tr>
            <tr>

    <td><a href="{{ path('deactivate', {'id': a.id}) }}" class="btn btn-primary btn-sm"><i class="fa-solid fa-x"></i></a></td>
{% else %}
    <td><a href="{{ path('activate', {'id': a.id}) }}" class="btn btn-primary btn-sm"><i class="fa-solid fa-check"></i></a></td>
{% endif %}
    </tr>
    {%endfor%}
</table>

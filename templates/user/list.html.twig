    {%for a in users%}
    <tr class="table-primary">
        <td><img width="70px" src="{{ asset('uploads/photos/' ~ a.getPhotoDeProfile) }}"></td>
        <td>{{a.id}}</td>
        <td>{{a.username}}</td>
        <td>{{a.email}}</td>
        <td>{{a.getDateDeNaissance() | date('d/m/Y') }}</td>
        <td>{{ a.getUserType }}</td>
        <td>{{a.nom}}</td>
        <td>{{a.prenom}}</td>
        <td>{{ a.getNumTelephone }}</td>

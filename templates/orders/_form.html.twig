<div class="container">

    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

    <div class="form-group">
        {{ form_label(form.Order_date, "Order Date") }}
        {{ form_widget(form.Order_date, {'attr': {'class': 'form-control'}}) }}
        <span class="text-danger">{{ form_errors(form.Order_date) }}</span>
    </div>

    <div class="form-group">
        {{ form_label(form.Total_price, "Total price") }}
        {{ form_widget(form.Total_price, {'attr': {'class': 'form-control'}}) }}
        <span class="text-danger">{{ form_errors(form.Total_price) }}</span>
    </div>

    <div class="form-group">
        {{ form_label(form.Quantity, "Quantity") }}
        {{ form_widget(form.Quantity, {'attr': {'class': 'form-control'}}) }}
        <span class="text-danger">{{ form_errors(form.Quantity) }}</span>
    </div>

    <div class="form-group">
        {{ form_label(form.Product_name, "Product Name") }}
        {{ form_widget(form.Product_name, {'attr': {'class': 'form-control'}}) }}
        <span class="text-danger">{{ form_errors(form.Product_name) }}</span>
    </div>

    <div class="form-group">
        {{ form_label(form.User_name, "User Name") }}
        {{ form_widget(form.User_name, {'attr': {'class': 'form-control'}}) }}
        <span class="text-danger">{{ form_errors(form.User_name) }}</span>
    </div>

    <br/>
    <div align="center">
        <button class="btn btn-success">{{ button_label|default('Create') }}</button>
    </div>

    {{ form_end(form) }}

</div>

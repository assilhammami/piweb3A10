<h1>Modifier la publication</h1>
    {{ form_start(form) }}
    {% if ancienneImage is not null %}
        <img src="{{ asset('image/' ~ ancienneImage) }}" alt="Ancienne Image">
    {% endif %}
    {{ form_row(form.image) }}
    {{ form_row(form.titre) }}
    {{ form_row(form.description) }}

    <button type="submit">Confirmer</button> <!-- Bouton de confirmation à l'intérieur du formulaire -->
    {{ form_end(form) }}
